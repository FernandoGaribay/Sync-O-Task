<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"

    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    card_view:cardBackgroundColor="@color/red"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="4dp"
    card_view:cardUseCompatPadding="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="UI Aplicacion"
            android:textAlignment="center"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_priority"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bc_prioridad_card"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/card_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Desarrollo del Front End de la aplicacion Android" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="11sp"
                android:text="00:00" />

            <TextView
                android:id="@+id/card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_marginRight="10dp"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="06 Noviembre 2023" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>