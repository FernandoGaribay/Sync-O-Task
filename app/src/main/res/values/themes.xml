<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SyncOTask" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/background_color</item>
    </style>

    <style name="SyncOTask" parent="Base.Theme.SyncOTask" />

    <style name="Buttons.SyncOTask" parent="SyncOTask" >
        <item name="android:backgroundTint">@color/dark_blue</item>
    </style>

    <!-- Controles Activity Login -->
    <style name="EditTextUser.Login.SyncOTask" parent="SyncOTask" >
        <item name="android:drawableTint">@color/light_gray</item>
        <item name="android:drawableEnd">@drawable/ic_user</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

    <style name="EditTextPass.Login.SyncOTask" parent="SyncOTask" >
        <item name="android:drawableTint">@color/light_gray</item>
        <item name="android:drawableEnd">@drawable/ic_lock</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

    <!-- Controles Activity Create Task -->
    <style name="EditTime.createTask.SyncOTask" parent="SyncOTask" >
        <item name="android:drawableEnd">@drawable/ic_down_list</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

    <style name="DatePicker.createTask.SyncOTask" parent="android:Theme.Material.Light.Dialog" >
        <item name="android:colorAccent">@color/dark_blue</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/dark_blue</item>
    </style>

    <style name="TimePicker.createTask.SyncOTask" parent="android:Theme.Material.Light.Dialog" >
        <item name="android:colorAccent">@color/dark_blue</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/dark_blue</item>
    </style>

    <!-- Controles Activity List Tasks -->
    <style name="Tag.listTasks.SyncOTask" parent="SyncOTask" >
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>

</resources>